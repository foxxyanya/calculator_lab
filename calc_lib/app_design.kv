<Interface>:
    anchor_x: 'center'
    anchor_y: 'top'

    canvas:
        Rectangle:
            source: 'calc_lib/background.png'
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            Label:
                text:'Парфенюк Анна Ильинична, 4 курс, 4 группа, 2023 год.'
                font_size:20
        BoxLayout: 
            orientation: 'horizontal'
            padding: 20

            BoxLayout:
                TextInput:
                    id: operand_1
                    orientation: 'vertical'
                    text: '0'

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: "+"
                        font_size:20 
                    CheckBox:
                        group: "operators"
                        active: True
                        on_active: root._set_operator(self, '+', 0)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "-"
                        font_size:20
                    CheckBox:
                        group: "operators"
                        on_active: root._set_operator(self, '-', 0)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "*"
                        font_size:20
                    CheckBox:
                        group: "operators"
                        on_active: root._set_operator(self, '*', 0)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "/"
                        font_size:20
                    CheckBox:
                        group: "operators"
                        on_active: root._set_operator(self, '/', 0)

            BoxLayout:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                Label:
                    text: "("
                    font_size:20

            BoxLayout:
                TextInput:
                    id: operand_2
                    orientation: 'vertical'
                    text: '0'


            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: "+"
                        font_size:20 
                    CheckBox:
                        group: "operators2"
                        active: True
                        on_active: root._set_operator(self, '+', 1)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "-"
                        font_size:20
                    CheckBox:
                        group: "operators2"
                        on_active: root._set_operator(self, '-', 1)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "*"
                        font_size:20
                    CheckBox:
                        group: "operators2"
                        on_active: root._set_operator(self, '*', 1)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "/"
                        font_size:20
                    CheckBox:
                        group: "operators2"
                        on_active: root._set_operator(self, '/', 1)            

            BoxLayout:
                TextInput:
                    id: operand_3
                    orientation: 'vertical'
                    text: '0'     

            BoxLayout:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                Label:
                    text: ")"
                    font_size:20

            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: "+"
                        font_size:20 
                    CheckBox:
                        group: "operators3"
                        active: True
                        on_active: root._set_operator(self, '+', 2)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "-"
                        font_size:20
                    CheckBox:
                        group: "operators3"
                        on_active: root._set_operator(self, '-', 2)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "*"
                        font_size:20
                    CheckBox:
                        group: "operators3"
                        on_active: root._set_operator(self, '*', 2)

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 0.5
                    Label:
                        text: "/"
                        font_size:20
                    CheckBox:
                        group: "operators3"
                        on_active: root._set_operator(self, '/', 2)

            BoxLayout:
                TextInput:
                    id: operand_4
                    orientation: 'vertical'
                    text: '0' 

            BoxLayout:
                size_hint: 0.5, 0.5
                pos_hint: {'center_x': .5, 'center_y': .5}
                Label:
                    text: "="
                    font_size:20

            BoxLayout:
                TextInput:
                    id: result_field
                    hint_text: "Result'll be here..."
                    font_size:14

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                text: "Round strategy"
                font_size:15

            BoxLayout:
                orientation: 'horizontal'
                spacing: 0.5
                Label:
                    text: "Math rounding"
                    font_size:15
                CheckBox:
                    group: "rounding"
                    active: True
                    on_active: root._set_round_strategy(self, 'math')

            BoxLayout:
                orientation: 'horizontal'
                spacing: 0.5
                Label:
                    text: "Banker's rounding"
                    font_size:15
                CheckBox:
                    group: "rounding"
                    on_active: root._set_round_strategy(self, 'bank')

            BoxLayout:
                orientation: 'horizontal'
                spacing: 0.5
                Label:
                    text: "Floor rounding"
                    font_size:15
                CheckBox:
                    group: "rounding"
                    on_active: root._set_round_strategy(self, 'floor')

            BoxLayout:
                orientation: 'horizontal'
                spacing: 0.5
                Label:
                    text: "Without rounding"
                    font_size:15
                CheckBox:
                    group: "rounding"
                    on_active: root._set_round_strategy(self, '')

        
        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.5, 0.5
            pos_hint: {'center_x': .5, 'center_y': .5}
            Button:
                text:'Calculate'
                font_size:15
                on_press:root.calculate()
